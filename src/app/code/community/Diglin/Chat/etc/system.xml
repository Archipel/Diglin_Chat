                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </offline_greeting_long>
                        <away_greeting_long>
                            <label>Away Greeting Long</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>52</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </away_greeting_long>
                    </fields>
                </chatconfig>

                <widgetconfig>
                    <label>Widget Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<ul><li>- <strong>IMPORTANT</strong>: If you have the lite plan, not all features will be functional. <a href="/chat/admin/dashboard">Check the plan</a> you have.</li><li>- The chat bubble is only available when using the classic theme. All bubble configuration will have no effect if the class theme is in use.</li></ul>]]></comment>
                    <fields>
                        <general_config>
                            <label>General Config</label>
                            <sort_order>10</sort_order>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_config>
                        <widget>
                            <label>Classic or new Widget</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_widget</source_model>
                            <sort_order>20</sort_order>
                            <comment>The other configuration depends on this value. Each type of widget has his own set of options.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </widget>
                        <unreadflag>
                            <label>Unread Flag</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Represents the little unread messages flag. No: Never show the little flag - Yes: Allow the little flag to be shown</comment>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>0</widget>
                            </depends>
                        </unreadflag>

                        <!-- Theme Config (New Widget only) -->

                        <theme_config>
                            <label>Theme Configuration (New Widget only)</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </theme_config>
                        <theme_themes>
                            <label>Widget Theme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_newthemes</source_model>
                            <sort_order>23</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </theme_themes>
                        <theme_primary_color>
                            <label>Primary Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>24</sort_order>
                            <comment><![CDATA[Set the primary color. Color in hexadecimal format (‘AABBCC’)]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </theme_primary_color>
                        <theme_badge_color>
                            <label>Badge Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>25</sort_order>
                            <comment><![CDATA[Set the badge color. Color in hexadecimal format ('AABBCC’)]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                                <theme_themes>simple</theme_themes>
                            </depends>
                        </theme_badge_color>
                        <theme_bubble_color>
                            <label>Bubble Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>26</sort_order>
                            <comment><![CDATA[Set the bubble color. Color in hexadecimal format (‘AABBCC’)]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                                <theme_themes>classic</theme_themes>
                            </depends>
                        </theme_bubble_color>

                        <!-- Bubble Config -->

                        <bubble_config>
                            <label>Bubble Configuration (Only with Classic Widget OR New Widget with classic theme)</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bubble_config>
                        <bubble_show>
                            <label>Show the Bubble</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_showorhide</source_model>
                            <sort_order>40</sort_order>
                            <comment>Bubble only available with the classic theme or widget. Show: If the user hides or has hidden the chat bubble, it will remain hidden on subsequent page loads until the current session expires, or the reset API function is called.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bubble_show>
                        <bubble_title>
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <comment>Set the title displayed on the chat bubble.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bubble_title>
                        <bubble_text>
                            <label>Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <comment>Set the text displayed on the chat bubble.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bubble_text>

                        <!-- Window Config -->

                        <window_config>
                            <label>Window Configuration</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </window_config>
