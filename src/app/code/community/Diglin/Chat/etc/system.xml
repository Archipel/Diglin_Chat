                            <!--<label>Show the window</label>-->
                            <!--<frontend_type>select</frontend_type>-->
                            <!--<source_model>chat/config_source_showorhide</source_model>-->
                            <!--<sort_order>90</sort_order>-->
                            <!--<comment><![CDATA[Show the chat window. MOBILE: If on a mobile device, attempts to open the live chat widget in a new window instead. May not work on some devices or configurations. Important: Should only be called from a user event listener callback. e.g. <a href="javascript:void($zopim.livechat.window.show())">Open chat in new window</a>-->
<!--]]></comment>-->
                            <!--<show_in_default>1</show_in_default>-->
