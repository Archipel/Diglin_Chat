                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_onhide>

                        <!-- Button Config -->

                        <button_config>
                            <label>Button Configuration</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
