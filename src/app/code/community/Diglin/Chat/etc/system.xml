                            <!--<show_in_store>1</show_in_store>-->
                        <!--</window_show>-->
                        <window_title>
                            <label>Top Title</label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the title on the top of the chat window.</comment>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_title>
                        <window_theme>
                            <label>Theme</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_classicthemes</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>0</widget>
                            </depends>
                        </window_theme>
                        <window_color>
                            <label>Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>130</sort_order>
                            <comment>Provide here an hexa code e.g. 000000 for black color</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>0</widget>
                            </depends>
                        </window_color>

                        <!-- Window new Widget -->
                        <window_size>
                            <label>Size</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_windowsize</source_model>
                            <comment>Set the size of the chat window. Allowed values: small, medium, large.</comment>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_size>
                        <window_position>
                            <label>Window position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_windowposition</source_model>
                            <comment>Set position of the chat window.</comment>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_position>
                        <window_offset_horizontal>
                            <label>Horizontal Offset</label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the horizontal offset value (integer only) of the chat window from the edge of the browser window.</comment>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_offset_horizontal>
                        <window_offset_vertical>
                            <label>Vertical Offset</label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the vertical offset value (integer only) of the chat window from the edge of the browser window.</comment>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_offset_vertical>
                        <window_onshow>
                            <label>On Show Callback</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>180</sort_order>
                            <comment>Javascript function name callback which will be fired when showing the window. Note: the callback will not be fired if the chat window was shown using an API call.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </window_onshow>
                        <window_onhide>
                            <label>On Hide Callback</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>190</sort_order>
                            <comment>Javascript function name callback which will be fired when hiding the window. Note: the callback will not be fired if the chat window was hidden using an API call.</comment>
