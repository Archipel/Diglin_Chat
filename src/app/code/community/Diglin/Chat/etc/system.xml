                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget>1</widget>
                            </depends>
                        </button_offset_horizontal>
                        <button_offset_vertical>
                            <label>Vertical offset</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>260</sort_order>
                            <comment><![CDATA[Set the vertical offset of the chat button from the edge of the browser window. Distance from the edge of the browser window, in pixels (number)]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
