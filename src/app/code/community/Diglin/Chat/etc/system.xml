                                <widget_api>new</widget_api>
                            </depends>
                        </cookielaw_config>
                        <cookielaw_comply>
                            <label>Cookie Comply</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Display a notice that cookies are used the first time the visitor opens the chat window. Visitors can choose to allow or disallow cookies from the Options menu only when this function is called.</comment>
                            <sort_order>280</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget_api>new</widget_api>
                            </depends>
                        </cookielaw_comply>
                        <cookielaw_consent>
                            <label>Cookie Implicit Consent</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Disable the live chat widget and do not store cookies until the visitor explicitly allows the use of cookies.</comment>
                            <sort_order>290</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <widget_api>new</widget_api>
                                <cookielaw_comply>1</cookielaw_comply>
                            </depends>
                        </cookielaw_consent>

                        <!-- Concierge Config -->

                        <concierge_config>
                            <label>Concierge Configuration</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </concierge_config>
                        <concierge_avatar>
                            <label>Avatar</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">chat</upload_dir>
                            <base_url type="media" scope_info="1">chat</base_url>
                            <sort_order>310</sort_order>
                            <comment>Set the concierge’s avatar. Allowed file types: jpeg, gif, png</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </concierge_avatar>
                        <concierge_name>
                            <label>Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>320</sort_order>
                            <comment>Customize this name to give the concierge a personnality.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </concierge_name>
                        <concierge_title>
                            <label>Byline</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>330</sort_order>
                            <comment>Set the concierge’s byline. Write a short message to pique your visitors' interest.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </concierge_title>

                        <!-- Badge Config-->

                        <badge_config>
                            <label>Badge Configuration</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>340</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </badge_config>
                        <badge_show>
                            <label>Show Badge</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_showorhide</source_model>
                            <comment>Show or hide the badge automatically when the widget is loaded.</comment>
                            <sort_order>350</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </badge_show>
                        <badge_layout>
                            <label>Layout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_layout</source_model>
                            <comment>Set the layout of the chat badge. Image right (Image on right, text on left), Image left (Image on left, text on right), Image only, Text only</comment>
                            <sort_order>360</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </badge_layout>
                        <badge_image>
                            <label>Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">chat</upload_dir>
                            <base_url type="media" scope_info="1">chat</base_url>
                            <sort_order>370</sort_order>
                            <comment>No effect if the badge layout is text only</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </badge_image>
                        <badge_text>
                            <label>Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>380</sort_order>
                            <comment>No effect if the layout of the badge is Image Only</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>simple</window_type>
                            </depends>
                        </badge_text>

                        <!-- Bubble Config -->

                        <bubble_config>
                            <label>Bubble Configuration (Classic theme only)</label>
                            <frontend_model>chat/adminhtml_config_source_heading</frontend_model>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>classic</window_type>
                            </depends>
                        </bubble_config>
                        <bubble_show>
                            <label>Show the Bubble</label>
                            <frontend_type>select</frontend_type>
                            <source_model>chat/config_source_showorhide</source_model>
                            <sort_order>410</sort_order>
                            <comment>Show: If the user hides or has hidden the chat bubble, it will remain hidden on subsequent page loads until the current session expires, or the reset API function is called.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>classic</window_type>
                            </depends>
                        </bubble_show>
                        <bubble_title>
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>420</sort_order>
                            <comment>Set the title displayed on the chat bubble.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>classic</window_type>
                            </depends>
                        </bubble_title>
                        <bubble_text>
                            <label>Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>430</sort_order>
                            <comment>Set the text displayed on the chat bubble.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <window_type>classic</window_type>
                            </depends>
                        </bubble_text>
                    </fields>
                </widgetconfig>

                <departments>
                    <label>Departments Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <filter>
                            <label>Filter</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <comment>Shows only defined departments. e.g. => 'technical support','sales'. Display only the specified departments in the pre-chat form.  All other departments will be hidden regardless of their status.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filter>
                    </fields>
                </departments>
            </groups>
        </chat>
    </sections>
</config>
